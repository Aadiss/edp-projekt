<VBox alignment="CENTER" prefHeight="722.0" prefWidth="1209.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.edpprojekt2.macaucontroller.MacauController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Pane id="mainPane" prefHeight="738.0" prefWidth="1169.0">
      <children>
          <Button layoutX="679.0" layoutY="316.0" onAction="#startGame" prefHeight="26.0" prefWidth="80.0" text="Play!" textFill="#724545">
            <font>
               <Font size="14.0" />
            </font>
         </Button>
      
                <Label fx:id="welcomeText" layoutX="489.0" layoutY="413.0" prefHeight="45.0" prefWidth="190.0" text="Welcome in simple Macau Game!" />
         <ImageView fx:id="lastCardImage1" fitHeight="150.0" fitWidth="200.0" layoutX="1064.0" layoutY="200.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@cards/red_back.png" />
            </image>
         </ImageView>
         <ImageView fx:id="lastCardImage" fitHeight="213.0" fitWidth="164.0" layoutX="515.0" layoutY="209.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@cards/green_back.png" />
            </image>
         </ImageView>
         <Label fx:id="remainingCardsLabel" layoutX="996.0" layoutY="351.0" prefHeight="17.0" prefWidth="190.0" text="Remaining Cards:" />
         <Pane fx:id="cardsHand" layoutX="6.0" layoutY="473.0" prefHeight="195.0" prefWidth="1151.0" />
         <ScrollPane fx:id="scrollHand" layoutX="6.0" layoutY="473.0" prefHeight="200.0" prefWidth="1151.0">
         </ScrollPane>
         <ScrollPane fx:id="computerHand" layoutX="14.0" layoutY="14.0" prefHeight="186.0" prefWidth="1040.0" />
         <Button fx:id="getCardButton" layoutX="1080.0" layoutY="387.0" mnemonicParsing="false" onAction="#getCard" text="Get Card" />
         <Pane fx:id="computerHandPane" prefHeight="200.0" prefWidth="1026.0" />
         <Label fx:id="tableCardsAmount" layoutX="320.0" layoutY="321.0" text="Table Cards: " />
      </children>
   </Pane>
</VBox>
